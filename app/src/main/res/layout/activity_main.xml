<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ntu.com.wholeskyimager.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_label"
        android:id="@+id/textView"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <FrameLayout
            android:id="@+id/camera_preview"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>
        <!--
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageInput"
            android:minHeight="40dp"
            android:minWidth="40dp"
            android:nestedScrollingEnabled="true"
            android:src="@drawable/ntu_gs_1"
            android:maxHeight="200dp"
            android:maxWidth="700dp"
            android:scaleType="fitStart"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            />
        -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button1_text"
                android:id="@+id/buttonImport"
                android:onClick="importImage"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button2_text"
                android:id="@+id/buttonEdgeDetect"
                android:onClick="startEdgeDetection"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:id="@+id/imageSpacer"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            android:minHeight="100dp"
            android:minWidth="400dp"
            android:nestedScrollingEnabled="false"
            android:adjustViewBounds="true"
            android:maxHeight="150dp"
            android:maxWidth="400dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageOutput"
            android:layout_gravity="center"
            android:background="#cccccc"
            android:minHeight="100dp"
            android:minWidth="400dp"
            android:nestedScrollingEnabled="false"
            android:adjustViewBounds="true"
            android:maxHeight="150dp"
            android:maxWidth="400dp"/>




    </LinearLayout>
</RelativeLayout>
